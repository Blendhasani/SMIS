@model IEnumerable<WebApplication5.Models.Afati>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Afatet</h1>

<p>
    <a asp-action="Create">Krijo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Emri)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hapur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NrProvimeve)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VitiAkademik)
            </th>
            <th>Veprime</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Emri)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hapur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NrProvimeve)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VitiAkademik)
            </td>

                        <td class="align-middle"style="display:flex; flex-direction:column;">


                            <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.Id" style="margin-bottom:10px">Ndrysho</a>
                            <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id" style="margin-bottom:10px">Detajet</a>
                                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id" style="margin-bottom:17px">Fshij</a>


                    </td>
        </tr>
}
    </tbody>
</table>
