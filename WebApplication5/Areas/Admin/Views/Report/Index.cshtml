<div class="row mt-4" style="flex-direction: row;flex-wrap: wrap;justify-content: space-evenly;">
	<div class="card col-md-5">


		<div class="card-body ">
			<h5 class="card-title">Raporti mbi të gjithë studentët</h5>
			<p class="card-text">Klikoni vegzën për të shkarkuar të gjithë studentët.</p>
			<a asp-action="GenerateStudent" asp-controller="Report" class="btn btn-primary">Shkarko</a>
		</div>
	</div>
	<div class="card col-md-5">

		<div class="card-body ">
			<h5 class="card-title">Raporti mbi të gjithë mësimdhënësit</h5>
			<p class="card-text">Klikoni vegzën për të shkarkuar të gjithë mësimdhënësit.</p>
			<a asp-action="GenerateTeacher" asp-controller="Report" class="btn btn-primary">Shkarko</a>
		</div>
	</div>
</div>



<div class="row mt-5" style="flex-direction: row;flex-wrap: wrap;justify-content: space-evenly;">
	<div class="card col-md-5">


		<div class="card-body ">
			<h5 class="card-title">Shikoni studentet ne fakultetin perkates</h5>


			<form asp-controller="Report" asp-action="StudentetNeFakultet" style="display:flex;flex-direction:row;">
				@* @Html.TextBox("SearchString")*@
				<input type="text" class="form-control rounded " style="width:300px; margin-right:10px;" name="SearchString" placeholder="Shkruani Fakultetin" />
				<button class="btn btn-success my-2 my-sm-0" type="submit"><i class="bi bi-search"></i></button>
			</form>

		</div>
	</div>
	<div class="card col-md-5">


		<div class="card-body">
			<h5 class="card-title">Shikoni transkripten e studentit te caktuar</h5>
			@*  <p class="card-text">Zgjedhni fakultetin</p>*@

			<form asp-controller="Report" asp-action="TranskriptaEStudentit" style="display:flex;flex-direction:row;">
				@* @Html.TextBox("SearchString")*@
				<input type="email" class="form-control rounded" style="width:300px; margin-right:10px;" name="SearchString" placeholder="Shkruani Emailin e Studentit" />
				<button class="btn btn-success my-2 my-sm-0" type="submit"><i class="bi bi-search"></i></button>
			</form>

		</div>
	</div>



</div>

<div class="row mt-5" style="flex-direction: row;flex-wrap: wrap;justify-content: space-evenly;">
