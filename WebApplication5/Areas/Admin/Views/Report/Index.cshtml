				<button class="btn btn-success my-2 my-sm-0" type="submit"><i class="bi bi-search"></i></button>
			</form>

		</div>
	</div>
	<div class="card col-md-5">


		<div class="card-body">
			<h5 class="card-title">Shikoni studentët e mësimdhënësit te caktuar</h5>
			@*  <p class="card-text">Zgjedhni fakultetin</p>*@

			<form asp-controller="Report" asp-action="ProfStudentsByEmail" style="display:flex;flex-direction:row;">
