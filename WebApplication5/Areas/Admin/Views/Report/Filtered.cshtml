
@model IEnumerable<WebApplication5.Models.Student>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}
<h1 class="mt-3 mb-3">Studentët</h1>

<table class="table mt-3 " style="margin: auto;
  width: 80%;

  padding: 10px;">
	<thead>

		<tr class="text-center ">
			<th>
				@Html.DisplayNameFor(model => model.ImageUrl)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Surname)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Email)
			</th>
			@if (User.Identity.IsAuthenticated && User.IsInRole("ADMIN"))
			{
	
				<th>
					@Html.DisplayNameFor(model => model.Fakulteti.Emri)
				</th>
				
			}


			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr class="text-center  align-middle">
				<td>
					<img src="@Html.DisplayFor(modelItem => item.ImageUrl)" style="width:128px;height:150px;" />

				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Surname)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Email)
				</td>

				

					<td>
						@Html.DisplayFor(modelItem => item.Fakulteti.Emri)
					</td>


					
				
			</tr>
		}
	</tbody>
</table>