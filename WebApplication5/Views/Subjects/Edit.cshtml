					<option selected asp-for="GjuhaLigjerimit" value="Shqipe">Shqipe</option>
					<option asp-for="GjuhaLigjerimit" value="English">English</option>

					<span asp-validation-for="GjuhaLigjerimit" class="text-danger"></span>
				</select>
			</div>

			<div class="form-group mt-3">
				<label asp-for="Semester" class="control-label"></label>
				<select class="form-select form-control" asp-for="Semester" aria-label="Default select example">


