			</div>
			<div class="form-group mt-3">
				<label asp-for="Kategoria" class="control-label"></label>
				<select class="form-select form-control" asp-for="Kategoria" aria-label="Default select example">


					<option selected asp-for="Kategoria" value="Obligative">Obligative</option>
					<option asp-for="Kategoria" value="Zgjedhore">Zgjedhore</option>
					<option asp-for="Kategoria" value="Transfer">Transfer</option>

					<span asp-validation-for="Kategoria" class="text-danger"></span>
				</select>
			</div>
            <div class="form-group">
				<input type="submit" value="Ruaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
