					<option asp-for="Semester" value=5>Semestri 5</option>
					<option asp-for="Semester" value=6>Semestri 6 </option>
					<option asp-for="Semester" value=7>Semestri 7</option>
					<option asp-for="Semester" value=8>Semestri 8</option>
					<option asp-for="Semester" value=9>Semestri 9</option>
					<option asp-for="Semester" value=10>Semestri 10</option>
					<option asp-for="Semester" value=11>Semestri 11</option>
					<option asp-for="Semester" value=12>Semestri 12</option>
					<span asp-validation-for="Semester" class="text-danger"></span>
