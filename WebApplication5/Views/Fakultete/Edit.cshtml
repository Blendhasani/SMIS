@model WebApplication5.Models.Fakulteti

@{
    ViewData["Title"] = "Edit";
}
<div class="bg-light p-5 rounded">
<h1>Edit</h1>

<h4>Fakulteti</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Kodi" class="control-label"></label>
                <input asp-for="Kodi" class="form-control" />
                <span asp-validation-for="Kodi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Emri" class="control-label"></label>
                <input asp-for="Emri" class="form-control" />
                <span asp-validation-for="Emri" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shkurtesa" class="control-label"></label>
                <input asp-for="Shkurtesa" class="form-control" />
                <span asp-validation-for="Shkurtesa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ruaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>

