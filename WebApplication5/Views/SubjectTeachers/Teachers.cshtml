@model IEnumerable<WebApplication5.Models.Teacher>

@{
	ViewData["Title"] = "Index";
}

<a asp-action="Admin" asp-controller="Home" class="btn btn-primary float-md-start" style="margin-right:15px;"><i class="bi bi-arrow-90deg-left text-white"></i></◄◄i> </a>
<h1 class="mt-3 mb-3">Mësuesit</h1>


<p>
	<a asp-action="Create" asp-controller="SubjectTeachers" style="text-decoration:none;">Create</a>
</p>
<table class="table">
	<thead>
		<tr class="text-center">
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Surname)
			</th>
		
			<th>
				@Html.DisplayNameFor(model => model.Email)
			</th>
		
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr class="text-center align-middle">
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Surname)
				</td>
			
				<td>
					@Html.DisplayFor(modelItem => item.Email)
				</td>
		

					<td class="align-middle" style="display:flex; flex-direction:column;">


						<a asp-action="Index" class="btn btn-success" asp-controller="SubjectTeachers" asp-route-id="@item.Id">Lidhjet</a>
						


					</td>
			</tr>
		}
	</tbody>
</table>
