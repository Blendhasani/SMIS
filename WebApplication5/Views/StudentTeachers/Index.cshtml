@model IEnumerable<WebApplication5.Models.StudentTeacher>

@{
    ViewData["Title"] = "Index";
    string emri = "";
    string mbiemri = "";
    foreach(var item in Model)
    {
        emri = item.Student.Name;
        mbiemri = item.Student.Surname;
    }
 
}

<h1>Lidhjet e Studentit/es @emri @mbiemri</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table align-middle">
    <thead>
        <tr class="text-center  align-middle">
            <th>
                @Html.DisplayNameFor(model => model.Student.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher.Surname)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr class="text-center  align-middle">
            <td>
                @Html.DisplayFor(modelItem => item.Student.Name)
                
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.Surname)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teacher.Name)
            </td>
                  <td>
                    @Html.DisplayFor(modelItem => item.Teacher.Surname)
                </td>
             <td class="align-items-center "style="display:flex;   flex-direction:column;">


                    <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.Id" style="margin-bottom:10px; width:150px;">Edit</a>
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id" style="margin-bottom:10px;width:150px;">Details</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id" style="margin-bottom:17px;width:150px;">Delete</a>


                    </td>
        </tr>
}
    </tbody>
</table>
