@model IEnumerable<WebApplication5.Models.Subject>

@{
    ViewData["Title"] = "Lendet e mija";
}
<div class="bg-light p-5 rounded">
<h1 class="mt-3">Lendet e mia</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Semester)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Semester)
                </td>

                <td class="align-middle" style="display:flex; flex-direction:column;">


                    <a asp-action="Index" class="btn btn-success" asp-controller="Transkriptas" asp-route-id="@item.Id">Studentet</a>



                </td>
            </tr>
        }
    </tbody>
</table>
</div>