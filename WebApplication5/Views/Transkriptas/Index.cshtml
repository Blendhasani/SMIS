@model IEnumerable<WebApplication5.Models.Transkripta>

@{
    ViewData["Title"] = "Index";
}
<div class="bg-light p-5 rounded">
<h1 class="mt-3 mb-3">Studentët e pa notuar</h1>

<table class="table table-striped">
    <thead>
        <tr class="text-center  align-middle ">
            <th>
                @Html.DisplayNameFor(model => model.Nota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject.Name)
            </th>
          
            <th>Veprime</th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr class="text-center  align-middle">
                @if (item.Nota == null )
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.Nota)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Student.Name)
                    </td>
                     <td>
                        @Html.DisplayFor(modelItem => item.Student.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Subject.Name)
            

                        </td>

                    <td>
                   @if (User.IsInRole("Teacher"))
                        {
                            <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.Id">Vlerëso</a>
                           
                        }
               
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Anulo</a>
               
            </td>
                }
        
        </tr>
}
    </tbody>
</table>
</div>