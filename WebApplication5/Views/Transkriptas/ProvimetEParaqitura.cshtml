@model IEnumerable<WebApplication5.Models.Transkripta>

@{
    ViewData["Title"] = "Provimet e paraqitura";
}
<div class="bg-light p-5 rounded">
<h1 class="mt-3">Provimet e paraqitura</h1>

<table class="table ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nota)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.Subject.Name)
            </th> <th>
                @Html.DisplayNameFor(model => model.Subject.Semester)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject.ECTS)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            
            @if (DateTime.Now < item.CreatedDate.AddDays(2))
            {
                <tr class="align-middle">
                    <td>
                        @Html.DisplayFor(modelItem => item.Nota)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Subject.Name)
                    </td><td>
                        @Html.DisplayFor(modelItem => item.Subject.Semester)
                    </td>
                      <td>
                        @Html.DisplayFor(modelItem => item.Subject.ECTS)
                    </td>

                    @if (DateTime.Now < item.CreatedDate.AddDays(2))
                    {
                        if (item.Nota == null)
                        {
                             <td>

                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Anulo paraqitjen</a>

                            </td>
                        }
                          else if (item.Nota == 5)
                        {
                             <td>

                                <a class="btn btn-danger" asp-route-id="@item.Id" onclick="return false;">Refuzo notën</a>

                            </td>
                        }
                        else
                        {
                           <td>

                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Refuzo notën</a>

                        </td>  
                        }
                       
                    }
                      

                    
                </tr>
                }
         
            
        }
    </tbody>
</table>
</div>